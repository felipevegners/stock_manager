generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Batch {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  batchName     String?
  batchDate     String
  batchQty      Int
  batchTax      Float
  batchFreight  Float
  batchBoyPrice Float
  createdAt     DateTime? @default(now())
  updatedAt     DateTime? @updatedAt()
}

model category {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  itemName     String
  itemCapacity String
  itemColor    String
}

model Item {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  batch       Json?
  imei        String?
  model       String?
  color       String?
  capacity    String?
  battery     String?
  details     String?
  unitPrice   Float?
  tax         Float?
  profit      Float?
  status      String?
  isAvailable Boolean   @default(true)
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt()
}

model Customer {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String?
  document     String?
  phone        String
  email        String  @unique
  street       String
  stNumber     String
  stComplement String
  city         String
  state        String
  zipCode      String
  observations String
}

model Order {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  orderNum     String
  orderDate    DateTime  @default(now())
  customer     Json?
  items        Json
  shipping     Json
  orderValue   Float
  payment      Json
  status       String
  observations String
  isDraft      Boolean   @default(false)
  updatedAt    DateTime? @updatedAt()
}
