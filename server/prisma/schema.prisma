generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Item {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  imei      String?
  model     String?
  color     String?
  capacity  String?
  battery    String?
  details   String?
  unitPrice Float
  tax       Float
  status    String?
  isAvailable Boolean @default(true)
  createdAt DateTime?  @default(now())
  updatedAt DateTime? @updatedAt()
}

model Customer {
  id   String  @id @default(auto()) @map("_id") @db.ObjectId
  name String?
  phone String?
  email String? @unique
  street String
  stNumber String
  stComplement String
  city String
  state String
  zipCode String
  observations String
}
